{
  "name": "pratt",
  "version": "0.8.0-alpha.1",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "docs": "npm run docs:ts && npm run docs:book",
    "docs:book": "gitbook build",
    "docs:ts": "typedoc --out ./docs/api --mode file --excludePrivate ./src",
    "gh-pages": "gh-pages -d docs",
    "lint": "prettier -l '{src,test}/**/*.ts'",
    "lint:fix": "prettier --write '{src,test}/**/*.ts'",
    "precommit": "npm test",
    "prepack": "tsc && npm test",
    "test": "tape -r ts-node/register test/index.ts | tap-spec",
    "test:cover": "nyc -r text -r html npm test"
  },
  "devDependencies": {
    "@types/node": "^10.0.7",
    "gh-pages": "^1.1.0",
    "gitbook-cli": "^2.3.2",
    "husky": "^0.14.3",
    "nyc": "^11.6.0",
    "perplex": "^0.12.0-alpha.1",
    "prettier": "^1.12.1",
    "sinon": "^5.0.7",
    "tap-spec": "^4.1.1",
    "tape": "^4.9.0",
    "ts-node": "^6.0.3",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3"
  },
  "files": [
    "lib/index.js",
    "lib/index.d.ts",
    "index.d.ts"
  ],
  "nyc": {
    "extension": [
      ".ts"
    ]
  },
  "repository": "https://github.com/jrop/pratt"
}
